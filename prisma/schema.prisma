generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String  @id @default(uuid())
  googleId        String? @unique
  email           String  @unique
  passwordHash    String?
  firstName       String
  lastName        String
  phoneNumber     String?
  isEmailVerified Boolean @default(false)
  role            ROLE    @default(FREELANCER)
  refreshToken    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wallet            Wallet?
  paymentRecepientCode PaymentRecipient?
  profile           UserProfile?
  creatorProfile    Creator?
  freelancerProfile Freelancer?
  refreshTokens     RefreshToken[]
  otp               Otp[]
  settings          UserSettings?

  @@index([role])
  @@index([createdAt])
  @@map("users")
}

enum ROLE {
  CREATOR
  FREELANCER
  ADMIN
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

model UserProfile {
  id        String   @id
  userId    String   @unique
  bio       String?
  skills    String[]
  avatarUrl String?
  interests String[]
  location  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([location])
  @@map("user_profiles")
}

model UserSettings {
  id                   String   @id
  userId               String   @unique
  notificationsEnabled Boolean  @default(true)
  emailUpdates         Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Otp {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("password_reset_tokens")
}

model Creator {
  id               String   @id
  userId           String   @unique
  organizationName String?
  rating           Float    @default(0)
  totalGigsPosted  Int      @default(0)
  
  verified         Boolean  @default(false)
  gigs             Gig[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([verified])
  @@index([rating])
  @@map("creators")
}

model Gig {
  id          String    @id
  creatorId   String
  title       String
  description String
  category    String
  tags        String[]
  price       Float
  deadline    DateTime?
  status      GigStatus @default(DRAFT)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  creator      Creator       @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  applications Application[]
  contract     Contract?

  @@index([creatorId])
  @@index([category])
  @@index([status])
  @@index([createdAt])
  @@map("gigs")
}

enum GigStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELLED
}

model Freelancer {
  id           String        @id
  userId       String        @unique
  skills       String[]
  bio          String?
  rating       Float         @default(0)
  totalJobs    Int           @default(0)
  verified     Boolean       @default(false)
  applications Application[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([verified])
  @@index([rating])
  @@map("freelancers")
}

model Application {
  id           String            @id
  gigId        String
  freelancerId String
  coverLetter  String
  status       ApplicationStatus @default(PENDING)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime

  gig        Gig        @relation(fields: [gigId], references: [id], onDelete: Cascade)
  freelancer Freelancer @relation(fields: [freelancerId], references: [id], onDelete: Cascade)
  contract   Contract?

  @@index([gigId])
  @@index([freelancerId])
  @@index([status])
  @@map("applications")
}

enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
  WITHDRAWN
}

model Contract {
  id            String                @id
  gigId         String                @unique
  applicationId String                @unique
  creatorId     String
  freelancerId  String
  startDate     DateTime
  endDate       DateTime?
  escrowAccount EscrowAccount?
  status        ContractStatus        @default(ACTIVE)
  paymentStatus ContractPaymentStatus @default(PENDING)
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt

  gig         Gig         @relation(fields: [gigId], references: [id], onDelete: Cascade)
  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([creatorId])
  @@index([freelancerId])
  @@index([status])
  @@map("contracts")
}

enum ContractStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum ContractPaymentStatus {
  PENDING
  PAID
  FAILED
}

model Wallet {
  id            String       @id
  userId        String       @unique
  balanceCents  Int          @default(0)
  reservedCents Int          @default(0)
  currency      String
  status        WalletStatus @default(ACTIVE)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  version       Int          @default(0)

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  payments     Payment[]

  @@index([status])
  @@map("wallets")
}

enum WalletStatus {
  ACTIVE
  SUSPENDED
  CLOSED
}

model Payment {
  id                String           @id
  walletId          String            @unique
  systemReference   String            @unique
  provider          PaymentProvider
  providerReference String?          @unique
  amountKobo       Int
  currency          String
  direction         PaymentDirection
  status            PaymentStatus
  channel           PaymentChannel
  cancelReason      String
  meta              Json?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  wallet       Wallet       @relation(fields: [walletId], references: [id])
  transactions Transaction?

  @@index([walletId])
  @@index([status])
  @@index([createdAt])
  @@map("payments")
}

model PaymentRecipient {
  id String @id
  userId String @unique
  code String @unique
  accountNumber String
  bankName String
createdAt DateTime

user User @relation(fields: [userId] , references: [id])

}

enum PaymentProvider {
  PAYSTACK
  FLUTTERWAVE
  STRIPE
}

enum PaymentDirection {
  INCOMING
  OUTGOING
}

enum PaymentStatus {
  INITIATED
  PENDING
  SUCCESS
  FAILED
  CANCELLED
}

enum PaymentChannel {
  CARD
  TRANSFER
  USSD
}

model Transaction {
  id                String            @id
  walletId          String
  paymentId         String            @unique
  transactionType   TransactionType
  amountCents       Int
  status            TransactionStatus
  systemReference   String            @unique
  providerReference String            @unique
  source            TransactionSource
  description       String?
  metadata          Json
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  wallet  Wallet   @relation(fields: [walletId], references: [id])
  payment Payment? @relation(fields: [paymentId], references: [id])

  @@index([walletId])
  @@index([paymentId])
  @@index([createdAt])
  @@map("transactions")
}

enum TransactionType {
  CREDIT
  DEBIT
  RESERVE
  RELEASE
  REFUND
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}

enum TransactionSource {
  USER
  SYSTEM
  ESCROW
  EXTERNAL_PAYMENT
}

model EscrowAccount {
  id           String       @id
  contractId   String       @unique
  creatorId    String
  freelancerId String
  balanceCents Int          @default(0)
  currency     String
  status       EscrowStatus @default(HELD)
  locked       Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  contract     Contract            @relation(fields: [contractId], references: [id], onDelete: Cascade)
  auditLogs    EscrowAuditLog[]
  transactions EscrowTransaction[]
  releases     EscrowRelease[]
  disputes     EscrowDispute[]

  @@index([creatorId])
  @@index([freelancerId])
  @@index([status])
  @@map("escrow_accounts")
}

model EscrowTransaction {
  id          String                @id
  escrowId    String
  type        EscrowTransactionType
  amountCents Int
  reference   String?               @unique
  status      TransactionStatus
  description String?
  meta        Json?
  createdAt   DateTime              @default(now())

  escrowAccount EscrowAccount @relation(fields: [escrowId], references: [id], onDelete: Cascade)

  @@index([escrowId])
  @@index([type])
  @@map("escrow_transactions")
}

model EscrowRelease {
  id            String            @id
  escrowId      String
  amountCents   Int
  releaseType   EscrowReleaseType
  approvedBy    String?
  releasedAt    DateTime          @default(now())
  notes         String?
  transactionId String?
  meta          Json?

  escrowAccount EscrowAccount @relation(fields: [escrowId], references: [id], onDelete: Cascade)

  @@index([escrowId])
  @@index([releaseType])
  @@map("escrow_releases")
}

model EscrowDispute {
  id           String              @id
  escrowId     String
  raisedById   String
  reason       String
  status       EscrowDisputeStatus @default(OPEN)
  resolution   String?
  resolvedById String?
  createdAt    DateTime            @default(now())
  resolvedAt   DateTime?

  escrowAccount EscrowAccount @relation(fields: [escrowId], references: [id], onDelete: Cascade)

  @@index([escrowId])
  @@index([status])
  @@map("escrow_disputes")
}

model EscrowAuditLog {
  id        String   @id
  escrowId  String
  action    String
  actorId   String?
  oldState  Json?
  newState  Json?
  createdAt DateTime @default(now())

  escrowAccount EscrowAccount @relation(fields: [escrowId], references: [id], onDelete: Cascade)

  @@index([escrowId])
  @@index([createdAt])
  @@map("escrow_audit_logs")
}

enum EscrowStatus {
  HELD
  RELEASED
  DISPUTED
  CLOSED
}

enum EscrowTransactionType {
  FUND
  RELEASE
  REFUND
  ADJUSTMENT
}

enum EscrowReleaseType {
  PARTIAL
  FULL
  MILESTONE
}

enum EscrowDisputeStatus {
  OPEN
  IN_REVIEW
  RESOLVED
  CLOSED
}
