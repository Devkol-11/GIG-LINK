{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@core/*": ["core/*"],
      "@src/*": ["src/*"]
    },
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "core"]
}
